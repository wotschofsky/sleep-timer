{
   "name": "sleep-timer",
   "description": "A tool that automatically changes your PC's power state after a set amount of time",
   "version": "1.1.0",
   "author": {
      "name": "Felix Wotschofsky",
      "url": "https://felisk.io"
   },
   "main": "app.js",
   "license": "MIT",
   "scripts": {
      "postinstall": "electron-builder install-app-deps",
      "watch-scss": "node-sass ui/styles.scss --output=\"ui/\" --watch",
      "build-scss": "node-sass ui/styles.scss --output=\"ui/\" --output-style=compressed",
      "start": "electron .",
      "build-win": "electron-builder build --win",
      "build-mac": "electron-builder build --mac"
   },
   "dependencies": {
      "electron-titlebar-windows": "^3.0.0"
   },
   "devDependencies": {
      "electron": "^11.1.0",
      "electron-builder": "^22.9.1",
      "node-sass": "^5.0.0"
   }
}
